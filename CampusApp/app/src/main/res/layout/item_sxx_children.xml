<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:textSize="10sp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:id="@+id/iv_degree1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:theme="@style/MyCheckBox1" />

        <CheckBox
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:id="@+id/iv_degree2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:theme="@style/MyCheckBox2" />

        <CheckBox
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:id="@+id/iv_degree3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:theme="@style/MyCheckBox3" />

        <CheckBox
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:id="@+id/iv_degree4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:theme="@style/MyCheckBox4" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40sp"
            android:text="标题"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40sp"
        android:text="3月25日"
        android:textColor="#f682a2"
        android:textSize="10sp" />
</RelativeLayout>