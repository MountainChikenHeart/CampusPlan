<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cha"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:src="@drawable/zuojiantou" />

    <TextView
        android:id="@+id/wenzi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cha"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="58sp"
        android:text="修改密码"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wenzi2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wenzi1"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="10sp"
        android:text="请填写完整信息！"
        android:textColor="#000" />



    <RelativeLayout
    android:background="@drawable/gray_shape_bg"
    android:layout_marginLeft="30sp"
    android:layout_marginRight="30sp"
    android:layout_below="@id/wenzi2"
    android:id="@+id/rl_mima"
    android:layout_marginTop="50sp"
    android:layout_width="match_parent"
    android:layout_height="43sp">

        <EditText
            android:id="@+id/mima"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/color_txt"
            android:textColorHint="@color/color_txt"
            android:textSize="13sp" />


</RelativeLayout>

    <RelativeLayout
        android:background="@drawable/gray_shape_bg"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_below="@id/rl_mima"
        android:id="@+id/rl_querenmima"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="43sp">

        <EditText
            android:id="@+id/querenmima"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入确认密码"
            android:inputType="textPassword"
            android:textColor="@color/color_txt"
            android:textColorHint="@color/color_txt"
            android:textSize="13sp" />

    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/pink_shape_bg"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_below="@id/rl_querenmima"
        android:id="@+id/rl_zhuce"
        android:layout_marginTop="50sp"
        android:layout_width="match_parent"
        android:layout_height="43sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>
