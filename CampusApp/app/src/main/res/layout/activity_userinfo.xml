<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/top"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


         <include layout="@layout/top_tab" android:id="@id/top11"/>

            <RelativeLayout
                android:id="@+id/top1"
                android:gravity="center_vertical"
                android:layout_below="@id/top11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="头像" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/profile"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="2dp" />

                </RelativeLayout>
            </RelativeLayout>

        <ImageView
            android:layout_marginTop="10sp"
            android:layout_below="@+id/top1"
            android:id="@+id/iv_line3"
            android:background="#dbdbdb"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/top3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_line3"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="昵称" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="用户13RSH79" />

        </RelativeLayout>

        <ImageView
            android:layout_below="@+id/top3"
            android:id="@+id/iv_line4"
            android:background="#dbdbdb"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/top4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_line4"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="性别" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:paddingLeft="100dp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="男" />

        </RelativeLayout>

        <ImageView
            android:layout_below="@+id/top4"
            android:id="@+id/iv_line5"
            android:background="#dbdbdb"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/top5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_line5"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="学校" />

            <EditText
                android:id="@+id/et_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="厦门大学" />

        </RelativeLayout>

        <ImageView
            android:layout_below="@+id/top5"
            android:id="@+id/iv_line6"
            android:background="#dbdbdb"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/top6"
            android:layout_below="@id/iv_line6"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="个性签名" />

            <EditText
                android:id="@+id/et_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sg"
                android:background="@null"
                android:paddingBottom="100sp"
                android:text="这个家伙很懒，什么都没有留下"
                android:textColor="#a9a9a9" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginTop="55sp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:text="保存"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>
