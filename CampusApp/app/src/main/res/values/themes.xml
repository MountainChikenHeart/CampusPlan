<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskApp" parent="XUITheme.Phone">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!--是否去除标题-->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item>
        <!--透明背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--窗口背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--弹窗背景是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="MyCheckBox1" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#ff0000</item>
        <item name="colorControlActivated">#ff0000</item>
    </style>

    <style name="MyCheckBox2" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#ffa000</item>
        <item name="colorControlActivated">#ffa000</item>
    </style>

    <style name="MyCheckBox3" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#1B88EE</item>
        <item name="colorControlActivated">#1B88EE</item>
    </style>

    <style name="MyCheckBox4" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#03dac5</item>
        <item name="colorControlActivated">#03dac5</item>
    </style>


</resources>